{
  "emulators": {
    "functions": {
      "host": "0.0.0.0"
    },
    "hosting": {
      "host": "0.0.0.0"
    },
    "ui": {
      "host": "0.0.0.0"
    }
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build",
    "runtime": "nodejs12",
    "source": "."
  },
  "hosting": {
    "public": "public",
    "rewrites": [{
      "source": "/user/**", "function": "user"
    }]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
